<div id="slider" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <% @images.each do |indicator, file| %>
      <% if indicator == 0 %>
        <li data-target="#slider" data-slide-to=<%= indicator %> class="active"></li>
      <% else %>
        <li data-target="#slider" data-slide-to=<%= indicator %>></li>
      <% end %>
    <% end %>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    <% @images.each do |index, image| %>
      <% if index == 0 %>
        <div class="item active item-active">
          <%= link_to image_tag(image, width: '100%', alt: 'slide-active'), welcome_index_path, class: 'img-responsive' %>
          <div class="carousel-caption d-none d-md-block">
            <h1>En Club Sport Soccer ofrecemos arriendo de canchas.</h1>
            <h2>¡Ven a visitarnos!</h2>
          </div>  
        </div>
      <% else %>
        <div class="item">
          <%= link_to image_tag(image, width: '100%', alt: 'slide'), welcome_index_path, class: 'img-responsive' %>
          <div class="carousel-caption">
            <h1>En Club Sport Soccer ofrecemos arriendo de canchas.</h1>
            <h2>¡Ven a visitarnos!</h2>
          </div>  
        </div>
      <% end %>
    <% end %>
  </div>

  <!-- Left and right controls -->
  <a class="left carousel-control" href="#slider" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#slider" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
